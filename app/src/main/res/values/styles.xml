<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/alpha_orange</item>
        <item name="fab_colorPressed">@color/alpha_orange</item>
        <item name="fab_colorRipple">@color/alpha_orange</item>
    </style>

    <style name="MenuButtonsLarge">
        <item name="fab_size">normal</item>
        <item name="fab_colorNormal">@color/alpha_orange</item>
        <item name="fab_colorPressed">@color/alpha_orange</item>
        <item name="fab_colorRipple">@color/alpha_orange</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@drawable/no_thing</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomAlertDialogStyle">

        <item name="android:bottomBright">@drawable/no_thing</item>
        <item name="android:bottomDark">@drawable/no_thing</item>
        <item name="android:bottomMedium">@color/black</item>
        <item name="android:centerBright">@drawable/no_thing</item>
        <item name="android:centerDark">@drawable/no_thing</item>
        <item name="android:centerMedium">@drawable/no_thing</item>
        <item name="android:fullBright">@drawable/no_thing</item>
        <item name="android:fullDark">@drawable/no_thing</item>
        <item name="android:dialogMessage">@drawable/bac</item>
        <item name="android:buttonStyle">@drawable/edit_button</item>
        <item name="android:topBright">@drawable/bac</item>
        <item name="android:topDark">@drawable/bac</item>
    </style>

</resources>
