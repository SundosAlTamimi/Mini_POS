<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="270dp"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="رقم المادة"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="الباركود"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="اسم المادة بالعربي"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="اسم المادة بالإنجيزي"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="المجموعة"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="المجموعة الفرعية"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="نسبة الضريبة"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="سعر البيع"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:text="وصف المادة"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/type_card_material_no"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/type_card_barcode"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/type_card_arabic_name"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/type_card_material_name"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Button
                    android:id="@+id/type_card_group"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:background="@color/alpha_glasss"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/arrowdoown"
                    android:padding="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Button
                    android:id="@+id/type_card_branch_group"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:background="@color/alpha_glasss"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/arrowdoown"
                    android:padding="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Spinner
                    android:id="@+id/type_card_tax_percent"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/type_card_sale_price"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="135dp"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/add_cat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/add_sub_cat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginVertical="6dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="صورة المادة"
                android:textColor="@color/black"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="40dp">

        <LinearLayout
            android:id="@+id/catLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15sp"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="اضافة مجموعة"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="صورة المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cat_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape2" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape5"
                android:text="add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subCatLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15sp"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="اضافة مجموعة فرعية"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape5"
                android:text="add" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>