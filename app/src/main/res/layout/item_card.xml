<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/save"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:padding="2dp"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_save" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginHorizontal="5dp"
                android:padding="2dp"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_search" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:padding="2dp"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_revert" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/alpha"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="170dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/item_no"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/barcode"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/item_name_arabic"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/item_name_english"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/sub_category"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/tax_value"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/sale_price"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:text="@string/item_description"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/type_card_material_no"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:nextFocusDown="@id/type_card_barcode"
                    android:paddingHorizontal="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/type_card_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:nextFocusDown="@id/type_card_arabic_name"
                    android:paddingHorizontal="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/type_card_arabic_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:nextFocusDown="@id/type_card_english_name"
                    android:paddingHorizontal="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/type_card_english_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:nextFocusDown="@id/type_card_sale_price"
                    android:paddingHorizontal="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2">

                    <Button
                        android:id="@+id/type_card_group"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_glasss"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/arrowdoown"
                        android:padding="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp">

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2">

                    <Button
                        android:id="@+id/type_card_branch_group"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_glasss"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/arrowdoown"
                        android:padding="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2">

                    <Spinner
                        android:id="@+id/type_card_tax_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/type_card_sale_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:inputType="numberDecimal"
                    android:nextFocusDown="@id/description"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="153dp"
                    android:background="@drawable/shape3"
                    android:src="@android:drawable/ic_menu_add"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/add_cat"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape3"
                    android:src="@android:drawable/ic_menu_add" />

                <ImageView
                    android:id="@+id/add_sub_cat"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape3"
                    android:src="@android:drawable/ic_menu_add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="@string/item_pic"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|end"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:background="@drawable/shape2"
        android:visibility="gone"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/catLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15sp"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="@string/add_cat"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="@string/cat_no"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cat_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="@string/cat_name"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/cat_name"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="@string/cat_pic"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cat_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape2" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/add_cat_button"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/shape5"
                android:textSize="12sp"
                android:text="@string/add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subCatLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15sp"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="@string/add_sub_cat"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="@string/cat_no"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/subcat_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="@string/cat_name"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/sub_cat_name"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:id="@+id/add_subcat_button"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:textSize="12sp"
                android:background="@drawable/shape5"
                android:text="@string/add" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>