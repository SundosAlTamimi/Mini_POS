<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_card_back"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="130dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="رقم المادة"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="الباركود"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="اسم المادة بالعربي"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="اسم المادة بالإنجيزي"
                android:textColor="@color/black"
                android:textSize="17sp" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="المجموعة"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="المجموعة الفرعية"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="نسبة الضريبة"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:text="سعر البيع"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/type_card_material_no"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/type_card_barcode"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/type_card_arabic_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/type_card_material_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2">

                <Button
                    android:id="@+id/type_card_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/arrowdoown"
                    android:padding="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/type_card_branch_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrowdoown"
                    android:padding="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2">

                <Spinner
                    android:id="@+id/type_card_tax_percent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/type_card_sale_price"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="300dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="105dp"
                android:background="@drawable/shape3"
                android:visibility="invisible"
                android:src="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/add_cat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/add_sub_cat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="40dp">

        <LinearLayout
            android:id="@+id/catLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="10sp"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="6dp"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape5"
                android:text="add"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subCatLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="10sp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape5"
                android:text="add"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>