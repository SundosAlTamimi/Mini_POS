<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/save"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_margin="7px"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_save" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_margin="7px"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_search" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_margin="7px"
                android:background="@drawable/pronze_dot"
                android:src="@android:drawable/ic_menu_revert" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="40px"
        android:paddingVertical="20px">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="270px"
            android:layout_height="400px"
            android:layout_margin="10px"
            android:layout_marginBottom="10px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="رقم المادة"
                android:textColor="@color/black"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="الباركود"
                android:textColor="@color/black"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="اسم المادة بالعربي"
                android:textColor="@color/black"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="اسم المادة بالإنجيزي"
                android:textColor="@color/black"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="المجموعة"
                android:textColor="@color/black"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="المجموعة الفرعية"
                android:textColor="@color/black"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="نسبة الضريبة"
                android:textColor="@color/black"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="سعر البيع"
                android:textColor="@color/black"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:text="وصف المادة"
                android:textColor="@color/black"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_margin="10px"
            android:orientation="vertical">


            <EditText
                android:id="@+id/type_card_material_no"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:nextFocusDown="@id/type_card_barcode"
                android:paddingHorizontal="10px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28px" />

            <EditText
                android:id="@+id/type_card_barcode"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:nextFocusDown="@id/type_card_arabic_name"
                android:paddingHorizontal="10px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28px" />

            <EditText
                android:id="@+id/type_card_arabic_name"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:nextFocusDown="@id/type_card_material_name"
                android:paddingHorizontal="10px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28px" />

            <EditText
                android:id="@+id/type_card_material_name"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:nextFocusDown="@id/type_card_sale_price"
                android:paddingHorizontal="10px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28px" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Button
                    android:id="@+id/type_card_group"
                    android:layout_width="190px"
                    android:layout_height="match_parent"
                    android:background="@color/alpha_glasss"
                    android:paddingHorizontal="10px"
                    android:textColor="@color/black"
                    android:textSize="28px" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5px"
                    android:layout_weight="1"
                    android:background="@drawable/arrowdoown"
                    android:padding="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Button
                    android:id="@+id/type_card_branch_group"
                    android:layout_width="190px"
                    android:layout_height="match_parent"
                    android:background="@color/alpha_glasss"
                    android:paddingHorizontal="10px"
                    android:textColor="@color/black"
                    android:textSize="28px" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5px"
                    android:layout_weight="1"
                    android:background="@drawable/arrowdoown"
                    android:padding="20px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2">

                <Spinner
                    android:id="@+id/type_card_tax_percent"
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10px"
                    android:textColor="@color/black"
                    android:textSize="18px" />

            </LinearLayout>

            <EditText
                android:id="@+id/type_card_sale_price"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10px"
                android:textColor="@color/black"
                android:textSize="28px" />

            <EditText
                android:id="@+id/description"
                android:layout_width="220px"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:paddingHorizontal="10px"
                android:textColor="@color/black"
                android:textSize="18px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40px"
            android:layout_height="400px"
            android:layout_margin="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginTop="135px"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/add_cat"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginTop="20px"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/add_sub_cat"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginTop="12px"
                android:background="@drawable/shape3"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_margin="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20px">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@drawable/shape2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_marginVertical="6px"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:text="صورة المادة"
                android:textColor="@color/black"
                android:textSize="17px" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="40px">

        <LinearLayout
            android:id="@+id/catLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15px"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="35px"
                android:layout_marginVertical="5px"
                android:gravity="center"
                android:text="اضافة مجموعة"
                android:textColor="@color/white"
                android:textSize="18px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:layout_weight="1"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:layout_weight="1"
                    android:text="صورة المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cat_image"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:background="@drawable/shape2" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="80px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/shape5"
                android:text="add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subCatLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:orientation="vertical"
            android:padding="15px"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="35px"
                android:layout_marginVertical="5px"
                android:gravity="center"
                android:text="اضافة مجموعة فرعية"
                android:textColor="@color/white"
                android:textSize="18px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:layout_weight="1"
                    android:text="رمز المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="18px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:layout_weight="1"
                    android:text="اسم المجموعة : "
                    android:textColor="@color/white"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="35px"
                    android:layout_marginVertical="6px"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18px" />

            </LinearLayout>

            <Button
                android:layout_width="80px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="@drawable/shape5"
                android:text="add" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>