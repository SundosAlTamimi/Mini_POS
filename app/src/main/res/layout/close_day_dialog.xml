<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac_save_button"
    android:orientation="horizontal"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:padding="3dp">
        <Button
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bac_save_button"
            android:drawableStart="@drawable/ic_bubble_chart_black_24dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/done"
            android:textColor="@color/whitesL"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/closeDialogLiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/whites"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/whites"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/addNewItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_assessment_black_24dp"
                    android:gravity="center|start"
                    android:padding="3dp"
                    android:text="@string/close_day"
                    android:textAllCaps="false"
                    android:textColor="@color/greenS"
                    android:textSize="16sp" />
                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableStart="@drawable/ic_shopping_cart_black_24dp"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:text="@string/category"-->
                <!--android:textColor="@color/whitesL"-->
                <!--android:textSize="18sp" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bac_close_button"
                        android:gravity="bottom|center"
                        android:padding="10dp"
                        android:text="@string/new_day"
                        android:textAlignment="center"
                        android:textColor="@color/greenS"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/newDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bac_voo"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/alpha_green"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bac_close_button"
                        android:gravity="bottom|center"
                        android:padding="10dp"
                        android:text="@string/close_day"
                        android:textAlignment="center"
                        android:textColor="@color/greenS"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/closeDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bac_voo"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/alpha_green"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_close_button"
                    android:gravity="bottom|center"
                    android:padding="10dp"
                    android:text="@string/total_cash"
                    android:textAlignment="center"
                    android:textColor="@color/greenS"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bac_voo"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/alpha_green"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>