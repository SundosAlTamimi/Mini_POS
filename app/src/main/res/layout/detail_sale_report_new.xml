<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenL"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/greenS"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0"-->
            <!--android:drawableStart="@drawable/ic_search_black_24dp"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:padding="10dp"-->
            <!--android:background="@drawable/bac_save_button"-->
            <!--android:text="save"-->
            <!--android:gravity="center"-->
            <!--android:layout_margin="5dp"-->
            <!--android:textColor="@color/whitesL"-->
            <!--android:textSize="18sp" />-->




            <TextView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bac_save_button"
                android:drawableStart="@drawable/ic_bubble_chart_black_24dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preview"
                android:textColor="@color/whitesL"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bac_save_button"
                android:drawableStart="@drawable/ic_reply_all_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Back"
                android:textColor="@color/whitesL"
                android:textSize="16sp" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/gray3"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="@color/whites"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="2dp">

                    <LinearLayout
                        android:id="@+id/top_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/addNewItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_assessment_black_24dp"
                                android:gravity="center|start"
                                android:padding="3dp"
                                android:text="@string/details_sales_report"
                                android:textAllCaps="false"
                                android:textColor="@color/greenS"
                                android:textSize="16sp" />
                            <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:drawableStart="@drawable/ic_shopping_cart_black_24dp"-->
                            <!--android:drawablePadding="5dp"-->
                            <!--android:text="@string/category"-->
                            <!--android:textColor="@color/whitesL"-->
                            <!--android:textSize="18sp" />-->

                            <EditText
                                android:id="@+id/searchEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@drawable/bac_search"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:padding="2dp"
                                android:textAlignment="center"
                                android:textColor="@color/greenS" />

                            <TextView
                                android:id="@+id/search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@drawable/bac_save_button"

                                android:drawableEnd="@drawable/ic_search_black_24dp"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textColor="@color/greenS" />
                        </LinearLayout>

                        <!--<com.falconssoft.minipos.HorizontalListView-->
                        <!--android:id="@+id/categoriList"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_weight="1" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/right_linear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/textView38"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/from"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/df"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/to"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />


                                <EditText
                                    android:id="@+id/to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/voucher_no"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />


                            </LinearLayout>

                        </LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView43"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bac_search"
                                android:padding="5dp"
                                android:text="@string/item_no"
                                android:textAlignment="center"
                                android:textColor="@color/greenS"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView48"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bac_search"
                                android:padding="5dp"
                                android:text="@string/paid_qty"
                                android:textAlignment="center"
                                android:textColor="@color/greenS"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView4724"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bac_search"
                                android:padding="5dp"
                                android:text="@string/net_sales_before_tax"
                                android:textAlignment="center"
                                android:textColor="@color/greenS"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalSale"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bac_search"
                                android:padding="5dp"
                                android:text="@string/net_sales_after_tax"
                                android:textAlignment="center"
                                android:textColor="@color/greenS"
                                android:textSize="14sp" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/alpha_yellow" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp">
                        <TableLayout
                            android:id="@+id/table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TableLayout>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>