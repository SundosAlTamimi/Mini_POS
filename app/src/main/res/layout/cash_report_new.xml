<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenL"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/greenS"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0"-->
            <!--android:drawableStart="@drawable/ic_search_black_24dp"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:padding="10dp"-->
            <!--android:background="@drawable/bac_save_button"-->
            <!--android:text="save"-->
            <!--android:gravity="center"-->
            <!--android:layout_margin="5dp"-->
            <!--android:textColor="@color/whitesL"-->
            <!--android:textSize="18sp" />-->




            <TextView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bac_save_button"
                android:drawableStart="@drawable/ic_bubble_chart_black_24dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preview"
                android:textColor="@color/whitesL"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bac_save_button"
                android:drawableStart="@drawable/ic_reply_all_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Back"
                android:textColor="@color/whitesL"
                android:textSize="16sp" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/gray3"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="@color/whites"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="2dp">

                    <LinearLayout
                        android:id="@+id/top_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/addNewItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_assessment_black_24dp"
                                android:gravity="center|start"
                                android:padding="3dp"
                                android:text="@string/cash_report"
                                android:textAllCaps="false"
                                android:textColor="@color/greenS"
                                android:textSize="16sp" />
                            <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:drawableStart="@drawable/ic_shopping_cart_black_24dp"-->
                            <!--android:drawablePadding="5dp"-->
                            <!--android:text="@string/category"-->
                            <!--android:textColor="@color/whitesL"-->
                            <!--android:textSize="18sp" />-->

                            <EditText
                                android:id="@+id/editText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@drawable/bac_search"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:padding="2dp"
                                android:textAlignment="center"
                                android:textColor="@color/greenS"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@drawable/bac_save_button"

                                android:drawableEnd="@drawable/ic_search_black_24dp"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textColor="@color/greenS"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <!--<com.falconssoft.minipos.HorizontalListView-->
                        <!--android:id="@+id/categoriList"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_weight="1" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/right_linear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/textView38"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Date"
                                    android:layout_weight="1"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/date"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="invisible">


                                <TextView
                                    android:id="@+id/df"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/to"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />


                                <EditText
                                    android:id="@+id/to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="invisible">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/bac_save_button"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/voucher_no"
                                    android:textColor="@color/whitesL"
                                    android:textSize="16sp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bac_voo"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textColor="@color/greenS"
                                    android:textSize="16sp" />


                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/alpha_yellow" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:padding="10dp">


                            <LinearLayout
                                android:id="@+id/linear1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="6dp"
                                        android:layout_weight="1"
                                        android:text="@string/net_sales_before_tax"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/sales_no_tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bac_search"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:textColor="@color/greenS"
                                        android:textSize="16sp" />
                                </TableRow>


                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="6dp"
                                        android:layout_weight="1"
                                        android:text="@string/net_tax"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bac_search"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:textColor="@color/greenS"
                                        android:textSize="16sp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="6dp"
                                        android:layout_weight="1"
                                        android:text="@string/net_sales_after_tax"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/sales_after_tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bac_search"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:textColor="@color/greenS"
                                        android:textSize="16sp" />
                                </TableRow>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="3"
                                android:orientation="vertical">


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>